<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weshare.assortmentmodule.AllGoodsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:padding="10dp">
        <ImageView
            android:id="@+id/assort_allgoods_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_green"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/assort_allgoods_search_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="搜索享享商品"
            android:drawableLeft="@drawable/searcher_new_search_icon"
            android:layout_toRightOf="@id/assort_allgoods_back_iv"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/gray_round_shape"
            android:textColor="#999999"
            android:layout_marginRight="70dp"
            />
        <ImageView
            android:id="@+id/assort_allgoods_change_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/product_list_1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5D5D5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/assort_allgoods_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/assort_RL"
            android:background="#EEEEEE"/>
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/assort_allgoods_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:layout_above="@+id/assort_RL"/>-->
        <RelativeLayout
            android:id="@id/assort_RL"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/assort_allgoods_shoppingcart_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/item_grid_goto_cart"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/assort_allgoods_shoppingcart_num_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart_num_bg"
                android:text="0"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
