<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tab_suggest_content_et"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:gravity="start"
            android:hint="感谢您提供宝贵的意见!但是改不改还是看我们的心情的!"
            android:padding="3dp"/>

        <GridView
            android:id="@+id/tab_suggest_image_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"/>

        <ImageView
            android:id="@+id/tab_suggest_addimage_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add_photo"/>

        <Button
            android:id="@+id/tab_suggest_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ff9900"
            android:text="提交"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="微信公众号:享享平台"/>
    </LinearLayout>
</ScrollView>