<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="#F8F8F8">
    <TextView
        android:id="@+id/location_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位置信息"
        android:textSize="25sp"
        android:textColor="#88CC00"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/location_next_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="先逛一逛"
        android:textSize="20sp"
        android:textColor="#88CC00"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/position"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/location_message_tv"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D2D2"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#EFEFF4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D2D2"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="合肥市"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D2D2D2"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所在区："
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/location_depart_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自动匹配"
                android:textSize="20sp"
                android:textColor="#BCBCBC"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D2D2D2"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所在街道/镇："
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/location_street_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自动匹配"
                android:textSize="20sp"
                android:textColor="#BCBCBC"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D2D2D2"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/location_chooseaddress_RL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/location_depart_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="小区名称："
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/location_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择"
                android:textSize="20sp"
                android:textColor="#FF0000"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/location_depart_name_tv"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/next_bt"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFF4">
        <Button
            android:id="@+id/location_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册/登录"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#88CC00"
            android:layout_marginTop="35dp"/>
    </LinearLayout>
</LinearLayout>
