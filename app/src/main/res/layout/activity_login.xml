<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weshare.shoppingcartmodule.RegistActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/regist_bar_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:src="@drawable/back_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="快速注册"
            android:textColor="#88cc00"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:id="@+id/regist_step1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1 输入手机号码"
            android:textColor="#ff9900"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/regist_step2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/btn_next"
            android:drawablePadding="5dp"
            android:text="2 输入验证码"
            android:textColor="#ff9900"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/regist_step3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/btn_next"
            android:drawablePadding="5dp"
            android:text="3 设置密码"
            android:textColor="#ff9900"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">
    <EditText
        android:id="@+id/regist_input_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="输入手机号"
        android:inputType="phone"
        android:textSize="25sp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/regist_again_btn"
        android:maxLength="11"/>
        <Button
            android:id="@+id/regist_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#fff"
            android:background="#ff9900"
            android:text="重发验证码"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/regist_next_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="33sp"
        android:textColor="#fff"
        android:text="获取验证码"
        android:background="#ff9900"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即视为同意"/>
        <TextView
            android:id="@+id/regist_agreement_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="享享用户协议"
            android:textColor="#ff9900"
            />

    </LinearLayout>
</LinearLayout>
