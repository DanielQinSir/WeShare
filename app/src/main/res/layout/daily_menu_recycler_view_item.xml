<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F8F8F8"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/menu_recyclerview_item_main_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/menu_recyclerview_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂花糯米糕"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:id="@+id/menu_recyclerview_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月17日  星期六"
                android:textSize="19sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/menu_recyclerview_item_title_tv"
                android:layout_alignLeft="@id/menu_recyclerview_item_title_tv"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/menu_recyclerview_item_foodnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食材列表（2）"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/menu_recyclerview_item_buyall_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="一键选购"
                android:textColor="#999999"
                android:textSize="15sp"
                android:background="@drawable/green_round_shape"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"/>
        <RelativeLayout
            android:id="@+id/menu_list_item_RL1"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/menu_recyclerview_item_list_item_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_image"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/menu_recyclerview_item_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/menu_recyclerview_item_list_item_iv"
                android:layout_toRightOf="@id/menu_recyclerview_item_list_item_iv"
                android:layout_marginLeft="25dp"
                android:text="万佛湖有机鱼头 约1000g"
                android:layout_marginRight="35dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/menu_recyclerview_item_list_item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/menu_recyclerview_item_list_item_name_tv"
                android:layout_below="@id/menu_recyclerview_item_list_item_name_tv"
                android:text="¥26.80"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textColor="#FF9900"
                />
            <TextView
                android:id="@+id/menu_recyclerview_item_list_item_marketprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/menu_recyclerview_item_list_item_name_tv"
                android:layout_alignBottom="@id/menu_recyclerview_item_list_item_iv"
                android:text="¥49.80"
                android:textSize="16sp"
                android:textColor="#999999"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_alignBottom="@id/menu_recyclerview_item_list_item_iv"
                android:layout_alignLeft="@id/menu_recyclerview_item_list_item_name_tv"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/item_grid_float_shopping_cart_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"/>

        <com.example.weshare.homepagemodule.CustomListView
            android:id="@+id/menu_recyclerview_item_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/menu_list_item_RL2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/menu_recyclerview_item_display_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示全部食材"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/menu_recyclerview_item_display_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu_recyclerview_item_display_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/display_btn"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>