<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weshare.homepagemodule.HomeListDetailTwo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/home_list_detailtwo_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_green"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="25sp"
            android:textColor="#88CC00"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/home_list_detailtwo_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#FFAE33"
            app:tabIndicatorHeight="2dp"
            android:background="#EEEEEE"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/home_list_detailtwo_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/home_list_detailtwo_tablayout"
            android:layout_above="@+id/home_list_detailtwo_RL"/>
        <RelativeLayout
            android:id="@id/home_list_detailtwo_RL"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/home_list_detailtwo_reduce_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/reduc"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/home_list_detailtwo_num_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="1"
                android:background="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/home_list_detailtwo_reduce_iv"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/home_list_detailtwo_add_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:layout_toRightOf="@id/home_list_detailtwo_num_tv"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/home_list_detailtwo_shopping_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入购物车"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="3dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/home_list_detailtwo_add_iv"
                android:background="@drawable/yellow_round_shape"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/home_list_detailtwo_shoppingcart_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/item_grid_goto_cart"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/home_list_detailtwo_shoppingcart_num_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart_num_bg"
                android:text="0"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
